<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>contacter!</title>
</head>
<body>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<center><h1>RECLAMATIONS</h1></center>

<table class="table table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom</th>
        <th scope="col">E-mail</th>
        <th scope="col">Tel</th>
        <th scope="col">Description</th>
        <th scope="col">Reponse</th>

    </tr>
    </thead>
    <tbody>
    {% for i in Reclamations %}
        <tr>
            <td>{{ i.titre }}</td>
            <td>{{ i.nom }}</td>
            <td>{{ i.email }}</td>
            <td>{{ i.tel }}</td>
            <td>{{ i.description }}</td>
            {% if (i.reponse == NULL) %}
                <td>Pas de r√©ponse</td>
            <td><a href="{{ path('reponse_create',{'id':i.id}) }}">Repondre </a></td>
            {% else %}
            <td>{{ i.reponse.description }}</td>
                <td><a href="{{ path('reponse_read',{'id':i.reponse.id}) }}">Voir Plus </a></td>
            {% endif %}
            <td><a href="{{ path('reclamation_delete',{'id':i.id}) }}">Supprimer</a></td>
            <td><a href="{{ path('reclamation_update',{'id':i.id}) }}">Modifier</a></td>
        </tr>

    {% endfor %}
    </tbody>
</table>


</body>
</html>