{% block content %}

    <div class="card">

        <div class="card-header">
            <h4 class="card-title">Tables des Ensegnants</h4>

        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>E-Mail</th>
                                    <th>Tel</th>
                                    <th>Salaire</th>

                                </tr>
                                </thead>
                                <tbody id="myTable">
                                {% for i in Enseignant %}
                                    <tr>
                                        <td>{{i.id}}</td>
                                        <td>{{ i.nom }}</td>
                                        <td>{{ i.prenom }}</td>
                                        <td>{{ i.email }}</td>
                                        <td>{{ i.tel }}</td>
                                        {% if i.salaire is null %}
                                            <td><a href="{{ path('update_enseignant',{'id':i.id} ) }}">Pas de salaire</a> </td>
                                        {% else %}
                                            <td>{{ i.salaire.chiffre + i.salaire.prime}}</td>
                                        {% endif %}
                                        <td><a href="{{ path('delete_enseignant',{'id':i.id}) }}"><div class="active "  >
                                                    <a href="icons.html">
                                                        <i class="now-ui-icons shopping_basket"></i>
                                                    </a>
                                                </div></a></td>


                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
